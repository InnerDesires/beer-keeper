<% include _layouts/header %>
<div class="row">
    <h3>Додати новий продукт</h3>
</div>
<div class="row">
    <form action="/create_product" method="post">
        <div class="form-group">
            <label for="title">Назва</label>
            <input required type="text" class="form-control" name="title" id="title" placeholder="Назва">
        </div>
        <div class="form-group">    
            <label for="price">Вартість</label>
            <div class="input-group">
            <input required type="number" class="form-control" id="quantity" name="price" placeholder="Вартість" 
            min='0' step='0.01'> 
            <div class="input-group-append">
                <span class="input-group-text" id="basic-addon3">грн. за кг.</span>
            </div>
            </div>
        </div>
        <div class="form-group">
            <label for="category">Категорія</label>
            <select required class="form-control" id="category" name="category">
                <%categories.forEach(cat => {%>
                    <option> <%=cat.title%></option>
                <%});%>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Додати</button>
</form>
</div>
<% include _layouts/footer %>