<% include _layouts/header %>
    <div class="row">
        <div class="col-12">
            <h3>Поповнення</h3>
        </div>
    </div>
    <form action="/storage/replenish?id=<%=product._id%>" method="post">
        <div class="row">
            <div class="form-group col-6">
                <label for="title">Назва</label>
                <input class="form-control" id="title" aria-describedby="emailHelp" placeholder="<%=product.title%>" disabled>
            </div>
            <div class="form-group col-6">
                <label for="quantity">Кількість</label>
                <input required type="number" class="form-control" id="quantity" name="quantity" placeholder="0.00" min='0' step='0.001'>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-12">
                <label for="provider">Постачальник</label>
                <input class="form-control" id="provider" name="provider" placeholder="Введіть назву постачальника">
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <button type="submit" class="btn btn-success btn-lg btn-block">Поповнити</button>
            </div>
        </div>
    </form>

    <% include _layouts/footer %>