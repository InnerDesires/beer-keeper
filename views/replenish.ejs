<% include _layouts/header %>
<div class="row">
    <h3>Поповнення</h3>
</div>
    <form action="/storage/replenish?id=<%=product._id%>" method="post">
        <div class="row">
            <div class="form-group col-md-5">
                <label for="title">Назва</label>
                <input class="form-control" id="title" aria-describedby="emailHelp" placeholder="<%=product.title%>"
                    disabled>
            </div>
            <div class="form-group col-md-5">
                <label for="quantity">Кількість</label>
                <input required type="number" class="form-control" id="quantity" name="quantity" placeholder="0.00"
                    min='0' step='0.001'>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-5">
                <label for="cost">Вартість, грн.</label>
                <input type="number" class="form-control" id="cost" name="cost" placeholder="0.00" min='0'>
            </div>
            <div class="form-group col-md-5">
                <label for="provider">Постачальник</label>
                <input class="form-control" id="provider" name="provider" placeholder="Введіть назву постачальника">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Поповнити</button>
    </form>

<% include _layouts/footer %>