<% include _layouts/header %>
<div class="row">
    <div class="col-12">
        <h3>Редагування</h3>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <form action="/storage/edit?id=<%=product._id%>" method="post">
            <div class="form-group">
                <label for="title">Назва</label>
                <input type="text" class="form-control" name="title" id="title" placeholder="<%=product.title%>">
            </div>
            <div class="row">
                <div class="form-group col-6">
                    <label for="price">Вартість</label>
                    <input type="number" class="form-control" id="quantity" name="price"
                        placeholder="<%=product.price%>" min='0' step='0.01'>
                </div>
                <div class="form-group col-6">
                    <label for="category">Категорія</label>
                    <select class="form-control" id="category" name="category">
                        <%categories.forEach(cat => {%>
                        <option> <%=cat.title%></option>
                        <%});%>
                    </select>
                </div>
            </div>
            <button type="submit" class="btn btn-warning">Редагувати</button>
        </form>
    </div>
</div>
<% include _layouts/footer %>