<% include _layouts/header %>
    <div class="row">
        <div class="col-12">
            <h3>Списання</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <form action="/storage/write-off?id=<%=product._id%>" method="post">
                <div class="form-group">
                    <label for="title">Назва</label>
                    <input type="email" class="form-control" id="title" aria-describedby="emailHelp" placeholder="<%=product.title%>" disabled>
                </div>
                <div class="form-group">
                    <label for="quantity">Кількість</label>
                    <input required type="number" class="form-control" id="quantity" name="quantity" placeholder="0.00" min='0' step='0.001'>
                </div>
                <div class="form-group">
                    <label for="quantity">Причина списання</label>
                    <input required type="string" class="form-control" id="reason" name="reason" placeholder="Вкажіть причину списання" min='0' step='0.001'>
                </div>
                <button type="submit" class="btn btn-warning  btn-lg btn-block">Cписати</button>
            </form>
        </div>
    </div>
    <% include _layouts/footer %>